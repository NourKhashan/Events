 

<%- include('../headerAdmin.ejs') %>

<br/>


<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 text-center mx-auto">
            <h3 class="mb-30">Add Event</h3>
            <form  method="POST" action="/events/add" onsubmit="return registerValidation()">
               
				<div class="mt-10">

				</div>

                <div class="mt-10">
						<input type="text" name="title" placeholder="Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Title'" required class="single-input">

				</div>
				<div class="mt-10">
					<!-- <input type="text" name="id" placeholder="ID" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ID'" required class="single-input"> -->
					<input type="text" name="date" class="datee form-control">

				</div>
				<div class="form-group mt-10">
						<div class="input-group">
							<span class="input-group-addon">
							<span class="glyphicon glyphicon-lock"></span>
							</span>
						   main speaker
							<select name="mainSpeaker">
									<option value="-1"> -- Selected --</option>

								<%speakers.forEach((speaker)=>{%>
										<option value="<%=speaker._id%>"><%=speaker.name%></option>
								<%})%>

							</select>
						  
						</div>

				</div>

				<div class="form-group">
						<div class="input-group">
							<span class="input-group-addon">
							<span class="glyphicon glyphicon-lock"></span>
							</span>
							others
						
							<select name="otherSpeakers" multiple style="width: 100">
								<%speakers.forEach((speaker)=>{%>
										<option value="<%=speaker._id%>"><%=speaker.name%></option>
								<%})%>

							</select>
						</div>

					</div>
				
					
                <div class="mt-10">

            <input type="submit" value="Add" class="genric-btn success"/>

            </div>

            </form>
        </div>
        
        
    </div>
</div>



	<%- include('../footer') %>


