<%- include('../headerAdmin.ejs') %>

<div class="section-top-border">
		<div class="row">
			<div class="col-lg-6 text-center mx-auto">
				<h3 class="mb-30">Edit Event</h3>
				<form  method="POST" action="/events/edit/<%=event._id%>">
					<div class="mt-10">
							<input type="text" disabled name="id" value="<%=event._id%>" placeholder="ID"  onfocus="this.placeholder = ''" onblur="this.placeholder = 'ID'"  class="single-input">
	
					</div>
					<div class="mt-10">
                            <input type="text" name="title" value="<%=event.title%>"  placeholder="Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Title'" required class="single-input">
	
					</div>
					<div class="mt-10">
						<!-- <input type="text" name="id" placeholder="ID" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ID'" required class="single-input"> -->
						<input type="text" name="date" class="datee form-control" value="<%=event.eventDate%>">
	
					</div>
					<div class="form-group">
						<div class="input-group">
							<span class="input-group-addon">
							<span class="glyphicon glyphicon-lock"></span>
							</span>
						   main speaker
							<select name="mainSpeaker">
									<option value="-1"> -- Selected --</option>
								<%speakers.forEach((speaker)=>{%>
									
										<option value="<%=speaker._id%>" 
											<%if(event.mainSpeaker != 0 && speaker._id == event.mainSpeaker){%>
												selected
											<%}%>
											><%=speaker.name%></option>
								<%})%>

							</select>
						  
						</div>

				</div>


				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon">
						<span class="glyphicon glyphicon-lock"></span>
						</span>
						others
					
						<select name="otherSpeakers" multiple>
							<%speakers.forEach((speaker)=>{%>
									<option value="<%=speaker._id%>"
										
										<%if(event.otherSpeakers.includes(speaker._id )){%>
												selected
										<%}%>
										><%=speaker.name%></option>
							<%})%>

						</select>
					</div>

				</div>
	
				<input type="submit" value="Update" class="genric-btn success"/>
				<a href="/events/list"  class="genric-btn success"> Cancel</a>
	
				</div>
	
				</form>
			</div>
			
			
		</div>
	</div>




	<%- include('../footer') %>
